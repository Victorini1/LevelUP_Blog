{{> header }}

<div class="container mx-auto px-20">
<div class="flex justify-center">
<div id="single-post" class="w-72 bg-white rounded-lg shadow-md p-6" style="cursor: auto;">
  <div  class="w-16 mx-auto relative -mt-10 mb-3">
    <img id="pic" class="-mt-1" src="https://as1.ftcdn.net/v2/jpg/02/91/30/32/1000_F_291303231_XtAlZgHTFITfpIEhIgZFYGniwjmndyv0.jpg" alt="computer setup">
